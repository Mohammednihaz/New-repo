<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.example.www.mughalai_kitchan_app.confirmorder">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/cardView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:id="@+id/textView5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/add"
                android:layout_alignParentStart="true"
                android:text="Address"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@+id/pone"
                android:layout_alignParentStart="true"
                android:text="Phone No"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/pone"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <EditText

                android:id="@+id/add"
                android:layout_width="230dp"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/cmorder"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:id="@+id/cardView3">
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:textColor="@color/Red"
            android:textSize="25sp"
            android:textStyle="bold|italic"
                 android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Note:"
            android:id="@+id/textView4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:text="Free home delivery for only up to 3KM from the Restaurant.Additionally, you will be charged extra for any containers used to deliver the food.   "
                android:textColor="@color/Red"
                android:textSize="15sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/cmorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/LightGreen"
        android:text="Comfirm Order"
        android:textColor="@color/White" />



</RelativeLayout>
